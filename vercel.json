{
    "vercel.json": {
      "framework": "nextjs",
      "buildCommand": "npm run build",
      "outputDirectory": ".next",
      "installCommand": "npm install",
      "devCommand": "npm run dev",
      "env": {
        "NEXT_PUBLIC_SITE_URL": "https://your-domain.vercel.app"
      }
    },
    
    "directory_structure": {
      "project_root": {
        "app/": {
          "layout.tsx": "Main layout component",
          "page.tsx": "Home page",
          "globals.css": "Global styles",
          "analysis/": {
            "[slug]/": {
              "page.tsx": "Dynamic analysis page"
            }
          }
        },
        "components/": {
          "Navigation.tsx": "Navigation component",
          "NotebookRenderer.tsx": "Notebook renderer",
          "ChartCell.tsx": "Chart visualization",
          "CodeBlock.tsx": "Code syntax highlighting",
          "MetricsTable.tsx": "Financial metrics table"
        },
        "content/": {
          "analyses/": {
            "apple-analysis.md": "Sample Apple analysis",
            "tesla-analysis.md": "Tesla analysis",
            "microsoft-analysis.md": "Microsoft analysis"
          }
        },
        "lib/": {
          "content.ts": "Content management utilities"
        },
        "public/": {
          "images/": "Static images",
          "icons/": "Favicon and icons"
        }
      }
    },
    
    "setup_instructions": [
      "1. Create a new Next.js project: npx create-next-app@latest financial-blog",
      "2. Install dependencies from package.json",
      "3. Set up Tailwind CSS: npx tailwindcss init -p",
      "4. Create the directory structure as shown above",
      "5. Add the components and pages",
      "6. Create content/analyses/ directory with markdown files",
      "7. Test locally: npm run dev",
      "8. Deploy to Vercel: vercel --prod"
    ],
    
    "environment_variables": {
      "NEXT_PUBLIC_SITE_URL": "Your site URL",
      "NEXT_PUBLIC_ANALYTICS_ID": "Google Analytics ID (optional)",
      "FINANCIAL_DATA_API_KEY": "API key for financial data (optional)"
    }
  }